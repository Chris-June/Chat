      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^7.0.2"
  }
}
